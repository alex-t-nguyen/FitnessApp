<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fitnessapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".profileFragmentTabs.editEmail.changeEmail"></activity>
        <activity android:name=".profileFragmentTabs.editEmail.change_email_authenticate" /> <!-- Logout Authentication activity -->
        <activity android:name=".profileFragmentTabs.DeleteAccount.deleteAuthenticate">
            <intent-filter>
                <action android:name=".workoutTemplate" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity> <!-- Workout template activity (Exercises) -->
        <activity
            android:name=".workoutCategory.workoutTemplate"
            android:parentActivityName=".workoutCategory.workouts"
            android:theme="@style/Toolbar">
            <intent-filter>
                <action android:name=".workoutTemplate" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity> <!-- Profile Fragment edit menu -->
        <activity
            android:name=".profileFragmentTabs.editProfile"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name=".profileFragmentTabs.editProfile" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity> <!-- Timer/Stopwatch Activity -->
        <activity
            android:name=".Clock.timer_stopwatch"
            android:label="@string/title_activity_timer_stopwatch"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name=".timer_stopwatch" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity> <!-- On-boarding Screen -->
        <activity
            android:name=".Introduction.IntroActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Sign Up screen -->
        <activity
            android:name=".Login.signUp"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name=".signUp" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity> <!-- Home Screen -->
        <activity
            android:name=".homeFragments.Home"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name=".Home" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity> <!-- Workout Tab -->
        <activity
            android:name=".workoutCategory.workouts"
            android:parentActivityName=".homeFragments.Home"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name=".workouts" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity> <!-- Login Screen (MAIN ACTIVITY) -->
        <activity android:name=".Login.MainActivity">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
    </application>

</manifest>