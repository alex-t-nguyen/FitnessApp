<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are you sure you want to delete your account?"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="20sp" />

    <Button
        android:id="@+id/delete_confirmation_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Delete"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_red_round"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        />
    <Button
        android:id="@+id/cancel_delete_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Cancel"
        android:layout_gravity="center_horizontal"
        android:textColor="#808080"
        android:background="@drawable/button_white_round"
        android:layout_marginBottom="10dp"
        />

    <ProgressBar
        android:id="@+id/delete_acc_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        style="?android:attr/progressBarStyle"
        android:visibility="gone" />
</LinearLayout>